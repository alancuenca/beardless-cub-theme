{% comment %}
  Footer Section

  Site footer with navigation links, social links, and copyright.
  Includes newsletter signup and accessibility features.
{% endcomment %}

<footer class="footer" role="contentinfo">
  <div class="footer__inner">
    <div class="footer__main">
      {% comment %} Brand / About {% endcomment %}
      <div class="footer__brand">
        <a href="{{ routes.root_url }}" class="footer__logo">
          {% if section.settings.logo %}
            <img
              src="{{ section.settings.logo | image_url: width: 200 }}"
              alt="{{ shop.name }}"
              width="100"
              height="auto"
              loading="lazy"
            >
          {% else %}
            <span class="footer__logo-text">{{ shop.name }}</span>
          {% endif %}
        </a>

        {% if section.settings.about_text != blank %}
          <p class="footer__about">{{ section.settings.about_text }}</p>
        {% endif %}

        {% comment %} Social Links {% endcomment %}
        {% if section.settings.show_social %}
          <div class="footer__social">
            {% if section.settings.social_instagram != blank %}
              <a href="{{ section.settings.social_instagram }}" class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <rect x="2" y="2" width="16" height="16" rx="4" stroke="currentColor" stroke-width="1.5"/>
                  <circle cx="10" cy="10" r="3.5" stroke="currentColor" stroke-width="1.5"/>
                  <circle cx="14.5" cy="5.5" r="1" fill="currentColor"/>
                </svg>
              </a>
            {% endif %}

            {% if section.settings.social_facebook != blank %}
              <a href="{{ section.settings.social_facebook }}" class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M18 10a8 8 0 10-9.25 7.9v-5.59H6.72V10h2.03V8.05c0-2 1.2-3.11 3.02-3.11.87 0 1.79.16 1.79.16v1.97h-1.01c-1 0-1.31.62-1.31 1.25V10h2.22l-.35 2.31h-1.87v5.6A8 8 0 0018 10z" fill="currentColor"/>
                </svg>
              </a>
            {% endif %}

            {% if section.settings.social_pinterest != blank %}
              <a href="{{ section.settings.social_pinterest }}" class="footer__social-link" aria-label="Pinterest" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M10 2a8 8 0 00-2.92 15.44c-.02-.7 0-1.55.18-2.31l1.3-5.5s-.32-.64-.32-1.6c0-1.5.87-2.62 1.96-2.62.92 0 1.37.7 1.37 1.53 0 .93-.6 2.32-.9 3.61-.26 1.08.54 1.96 1.61 1.96 1.93 0 3.23-2.48 3.23-5.42 0-2.24-1.5-3.91-4.26-3.91-3.1 0-5.04 2.32-5.04 4.9 0 .9.27 1.52.68 2.01.19.23.22.32.15.58l-.22.86c-.07.28-.29.38-.53.27-1.48-.6-2.16-2.22-2.16-4.04 0-3 2.53-6.6 7.54-6.6 4.03 0 6.68 2.92 6.68 6.05 0 4.14-2.3 7.24-5.7 7.24-1.14 0-2.21-.62-2.58-1.32l-.7 2.77c-.21.78-.63 1.57-1.01 2.18A8 8 0 1010 2z" fill="currentColor"/>
                </svg>
              </a>
            {% endif %}

            {% if section.settings.social_tiktok != blank %}
              <a href="{{ section.settings.social_tiktok }}" class="footer__social-link" aria-label="TikTok" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M14.5 2v7.5c0 2.21-1.79 4-4 4s-4-1.79-4-4 1.79-4 4-4V8a1.5 1.5 0 100-3h1.5V2h2.5zm0 0c0 1.5 1 3 3 3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>

      {% comment %} Navigation Columns {% endcomment %}
      {% if section.settings.menu_1 %}
        <nav class="footer__nav" aria-label="{{ section.settings.menu_1_title | default: 'Footer navigation' }}">
          {% if section.settings.menu_1_title != blank %}
            <h3 class="footer__nav-title">{{ section.settings.menu_1_title }}</h3>
          {% endif %}
          <ul class="footer__nav-list">
            {% for link in section.settings.menu_1.links %}
              <li>
                <a href="{{ link.url }}" class="footer__nav-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}

      {% if section.settings.menu_2 %}
        <nav class="footer__nav" aria-label="{{ section.settings.menu_2_title | default: 'Footer navigation' }}">
          {% if section.settings.menu_2_title != blank %}
            <h3 class="footer__nav-title">{{ section.settings.menu_2_title }}</h3>
          {% endif %}
          <ul class="footer__nav-list">
            {% for link in section.settings.menu_2.links %}
              <li>
                <a href="{{ link.url }}" class="footer__nav-link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}

      {% comment %} Newsletter {% endcomment %}
      {% if section.settings.show_newsletter %}
        <div class="footer__newsletter">
          <h3 class="footer__nav-title">{{ section.settings.newsletter_title | default: 'Newsletter' }}</h3>
          {% if section.settings.newsletter_text != blank %}
            <p class="footer__newsletter-text">{{ section.settings.newsletter_text }}</p>
          {% endif %}

          {% form 'customer', class: 'footer__newsletter-form' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="footer__newsletter-input-wrap">
              <input
                type="email"
                name="contact[email]"
                id="newsletter-email"
                placeholder="{{ 'customers.login.email' | t }}"
                required
                autocomplete="email"
                class="footer__newsletter-input"
              >
              <button type="submit" class="btn btn--primary footer__newsletter-btn">
                <span class="visually-hidden">{{ 'general.subscribe' | t }}</span>
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" aria-hidden="true">
                  <path d="M4 10h12M12 6l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
            {% if form.errors %}
              <p class="footer__newsletter-error">{{ form.errors | default_errors }}</p>
            {% endif %}
            {% if form.posted_successfully? %}
              <p class="footer__newsletter-success">{{ 'general.subscribed' | t }}</p>
            {% endif %}
          {% endform %}
        </div>
      {% endif %}
    </div>

    {% comment %} Bottom Bar {% endcomment %}
    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'general.all_rights_reserved' | t }}
      </p>

      {% if section.settings.show_payment_icons %}
        <div class="footer__payment">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background-color: var(--color-muted);
    padding-block: var(--space-3xl);
    margin-top: auto;
  }

  .footer__inner {
    max-width: var(--page-width);
    margin-inline: auto;
    padding-inline: var(--page-margin);
  }

  .footer__main {
    display: grid;
    gap: var(--space-2xl);
  }

  @media (min-width: 768px) {
    .footer__main {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer__main {
      grid-template-columns: 2fr 1fr 1fr 1.5fr;
    }
  }

  /* Brand */
  .footer__brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .footer__logo {
    display: inline-block;
    text-decoration: none;
  }

  .footer__logo-text {
    font-size: var(--text-xl);
    font-weight: 600;
  }

  .footer__about {
    font-size: var(--text-sm);
    color: var(--color-secondary);
    line-height: 1.6;
    max-width: 300px;
  }

  .footer__social {
    display: flex;
    gap: var(--space-sm);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: var(--radius-full);
    border: 1px solid var(--color-border);
    color: var(--color-secondary);
    transition: color var(--transition-fast), border-color var(--transition-fast);
  }

  .footer__social-link:hover {
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  /* Navigation */
  .footer__nav-title {
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .footer__nav-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer__nav-link {
    font-size: var(--text-sm);
    color: var(--color-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__nav-link:hover {
    color: var(--color-primary);
  }

  /* Newsletter */
  .footer__newsletter-text {
    font-size: var(--text-sm);
    color: var(--color-secondary);
    margin-bottom: var(--space-md);
  }

  .footer__newsletter-input-wrap {
    display: flex;
    gap: var(--space-xs);
  }

  .footer__newsletter-input {
    flex: 1;
    min-width: 0;
    padding: var(--space-sm) var(--space-md);
    font-size: var(--text-sm);
  }

  .footer__newsletter-btn {
    padding: var(--space-sm);
    flex-shrink: 0;
  }

  .footer__newsletter-error {
    margin-top: var(--space-sm);
    font-size: var(--text-xs);
    color: var(--color-error);
  }

  .footer__newsletter-success {
    margin-top: var(--space-sm);
    font-size: var(--text-xs);
    color: var(--color-success);
  }

  /* Bottom */
  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: center;
    padding-top: var(--space-2xl);
    margin-top: var(--space-2xl);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer__copyright {
    font-size: var(--text-xs);
    color: var(--color-secondary);
  }

  .footer__payment {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    justify-content: center;
  }

  .footer__payment-icon {
    height: 1.5rem;
    width: auto;
  }
{% endstylesheet %}

