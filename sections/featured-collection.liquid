{% comment %}
  Featured Collection Section

  Displays a curated grid of products from a selected collection.
  Features responsive columns, optional quick add, and vendor display.
  Optimized for performance with lazy loading and efficient rendering.
{% endcomment %}

{% liquid
  assign collection = section.settings.collection
  assign products_to_show = section.settings.products_to_show
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile
  assign show_vendor = section.settings.show_vendor
  assign show_quick_add = section.settings.show_quick_add
  assign image_ratio = section.settings.image_ratio

  if collection == blank
    assign placeholder_products = (1..products_to_show)
  endif
%}

<section
  class="featured-collection"
  style="
    --columns-desktop: {{ columns_desktop }};
    --columns-mobile: {{ columns_mobile }};
  "
>
  <div class="featured-collection__header">
    {% if section.settings.heading != blank %}
      <h2 class="featured-collection__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="featured-collection__subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    {% if collection and section.settings.show_view_all %}
      <a href="{{ collection.url }}" class="featured-collection__view-all btn btn--secondary">
        {{ 'sections.featured_collection.view_all' | t }}
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M6 12l4-4-4-4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    {% endif %}
  </div>

  <div class="featured-collection__grid">
    {% if collection != blank %}
      {% for product in collection.products limit: products_to_show %}
        {% render 'product-card',
          product: product,
          show_vendor: show_vendor,
          show_quick_add: show_quick_add,
          image_ratio: image_ratio,
          lazy_load: true,
          card_class: 'featured-collection__item'
        %}
      {% endfor %}
    {% else %}
      {% comment %} Placeholder products for preview {% endcomment %}
      {% for i in placeholder_products %}
        <article class="product-card featured-collection__item">
          <div class="product-card__media" style="--aspect-ratio: 3 / 4">
            <div class="product-card__placeholder">
              {{ 'product-' | append: forloop.index | placeholder_svg_tag }}
            </div>
          </div>
          <div class="product-card__info">
            {% if show_vendor %}
              <p class="product-card__vendor">{{ 'products.vendor' | t }}</p>
            {% endif %}
            <h3 class="product-card__title">
              <a href="#">{{ 'products.product_title' | t }}</a>
            </h3>
            <div class="price">
              <span class="price__regular">$99.00</span>
            </div>
          </div>
        </article>
      {% endfor %}
    {% endif %}
  </div>

  {% if collection and collection.products.size > products_to_show and section.settings.show_view_all %}
    <div class="featured-collection__footer">
      <a href="{{ collection.url }}" class="btn btn--primary">
        {{ 'sections.featured_collection.view_all' | t }} ({{ collection.products.size }})
      </a>
    </div>
  {% endif %}
</section>

{% stylesheet %}
  .featured-collection {
    padding-block: var(--space-3xl);
  }

  @media (min-width: 768px) {
    .featured-collection {
      padding-block: var(--space-4xl);
    }
  }

  .featured-collection__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-2xl);
    text-align: center;
  }

  @media (min-width: 768px) {
    .featured-collection__header {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
      gap: var(--space-lg);
    }
  }

  .featured-collection__heading {
    font-size: var(--text-2xl);
    font-weight: 600;
    margin: 0;
  }

  @media (min-width: 768px) {
    .featured-collection__heading {
      font-size: var(--text-3xl);
    }
  }

  .featured-collection__subheading {
    color: var(--color-secondary);
    font-size: var(--text-base);
    max-width: 500px;
  }

  @media (min-width: 768px) {
    .featured-collection__subheading {
      margin: 0;
    }
  }

  .featured-collection__view-all {
    display: none;
    gap: var(--space-xs);
  }

  @media (min-width: 768px) {
    .featured-collection__view-all {
      display: inline-flex;
      flex-shrink: 0;
    }
  }

  .featured-collection__grid {
    display: grid;
    grid-template-columns: repeat(var(--columns-mobile, 2), 1fr);
    gap: var(--space-md) var(--space-sm);
  }

  @media (min-width: 768px) {
    .featured-collection__grid {
      grid-template-columns: repeat(var(--columns-desktop, 4), 1fr);
      gap: var(--space-xl) var(--space-lg);
    }
  }

  .featured-collection__footer {
    display: flex;
    justify-content: center;
    margin-top: var(--space-2xl);
  }

  @media (min-width: 768px) {
    .featured-collection__footer {
      display: none;
    }
  }

  /* Override product card placeholder styles for this context */
  .featured-collection__item .product-card__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background-color: var(--color-muted);
    border-radius: var(--radius-md);
  }

  .featured-collection__item .product-card__placeholder svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:sections.featured_collection.name",
  "tag": "section",
  "class": "section-featured-collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.featured_collection.heading",
      "default": "Featured collection"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:labels.subheading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured_collection.collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "t:sections.featured_collection.products_to_show",
      "default": 4
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "t:sections.featured_collection.columns_desktop",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" },
        { "value": "5", "label": "5" }
      ],
      "default": "4"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "t:sections.featured_collection.columns_mobile",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ],
      "default": "2"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "options": [
        { "value": "portrait", "label": "Portrait (3:4)" },
        { "value": "square", "label": "Square (1:1)" },
        { "value": "landscape", "label": "Landscape (4:3)" }
      ],
      "default": "portrait"
    },
    {
      "type": "header",
      "content": "Product card"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "t:sections.featured_collection.show_vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "t:sections.featured_collection.show_quick_add",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "t:sections.featured_collection.view_all",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured_collection.name",
      "settings": {
        "heading": "Featured collection",
        "products_to_show": 4,
        "columns_desktop": "4",
        "columns_mobile": "2"
      }
    }
  ]
}
{% endschema %}
