<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="{{ settings.background_color }}">

    {% comment %} Preconnect to critical third-party origins {% endcomment %}
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {% comment %} Font preloading for performance {% endcomment %}
    {% unless settings.type_primary_font.system? %}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
      {{ settings.type_primary_font | font_url | preload_tag: as: 'font', crossorigin: 'anonymous' }}
    {% endunless %}

    {% comment %} Required Shopify header scripts {% endcomment %}
    {{ content_for_header }}

    {% comment %} Inlined CSS Variables for theming {% endcomment %}
    {% render 'css-variables' %}

    {% comment %} Critical CSS - loaded synchronously for above-the-fold content {% endcomment %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% comment %} Meta tags for SEO and social sharing {% endcomment %}
    {% render 'meta-tags' %}

    {% comment %} Cart JavaScript module {% endcomment %}
    <script src="{{ 'cart.js' | asset_url }}" type="module" defer></script>
  </head>

  <body>
    {% comment %} Skip to content link for accessibility {% endcomment %}
    <a href="#main-content" class="skip-link">
      {{ 'general.skip_to_content' | t }}
    </a>

    {% comment %} Header section group {% endcomment %}
    {% sections 'header-group' %}

    {% comment %} Main content area {% endcomment %}
    <main id="main-content" role="main">
      {{ content_for_layout }}
    </main>

    {% comment %} Footer section group {% endcomment %}
    {% sections 'footer-group' %}

    {% comment %} Cart drawer - rendered outside main flow {% endcomment %}
    {% section 'cart-drawer' %}
  </body>
</html>
